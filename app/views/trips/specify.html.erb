<head>
  <%= javascript_include_tag "specify" %>
</head>
<body>
  <header>
    <h1>TAMUber Students</h1>
  </header>
  <main>
    <h1>Cart Requirements</h1>
    
    <p>Before we start, please specify your requirements for the cart.</p>
  
    <%= form_tag("/trips/new", method: "post", id: "route_specs") do |form| %>
    <!--<form action="/trips/new" id="route_specs" method="get">-->
      <%= hidden_field_tag "routeData" %>
      <div class="form-group">
        <label for="seat_count">Seats required</label>:
        <select id="seat_count" class="form-control" name="seat_count">
          <% (1..6).each do |num| %>
            <option><%= num %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group">
        <div class="form-check">
          <label for="handicap_access" class="form-check-label">
            Require handicap access:
            <input id="handicap_access" class="form-check-input" name="handicap_access" type="checkbox" />
          </label>
        </div>
      </div>
      <button type="button" class="btn btn-primary" id="findRide" onclick='formCheck(<%=@cartIPs.to_json.html_safe%>, <%=@cartIDs.to_json.html_safe%>, "route_specs");'>Find a ride</button>
    <% end %>
    <center><p style='margin-top:5%;color:red'><%=@message%></p></center>
  </main>
</body>


